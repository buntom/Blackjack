        N,    N,    N,    N,    N,    N,    N,    N,    N,    N;
        N,    N,    N,    N,    N,    N,    N,    N,    N,    N;
        3,    2,    0,   -1,   -3,    N,    N,    N,    N,    N;
        0,   -1,   -3,   -4,   -4,    N,    N,    N,    N,    N;
        -3,   -4,   -6,   -7,   -7,   N,    N,    N,    N,    N;
        -5,   -6,   -7,   -9,   -9,   10,   10,    8,    4,   5;
        -8,  -10,   A,    A,    A,    9,    7,    5,    0,    3;
        A,    A,    A,    A,    A,    A,    A,    A,    A,   -6;
        A,    A,    A,    A,    A,    A,    A,    A,    A,    A;
        A,    A,    A,    A,    A,    A,    A,    A,    A,    A;
        A,    A,    A,    A,    A,    A,    A,    A,    A,    A
      </Matrix>
    </Table>
  </HardDecisionTables>
</StandDecisionTableConfiguration>